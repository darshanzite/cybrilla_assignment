<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!-- pressed state -->
	<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!-- <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" /> -->

            <stroke android:dashGap="0dp" android:dashWidth="0dp" android:width="1dp" android:color="@color/light_grey" />

            <size android:height="20dp" android:width="30dp" />
			<corners android:radius="3dp"/>
            <solid android:color="#FFFFFF" />
        </shape>
        
        </item>
    <item> <!-- default state -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!-- <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" /> -->

            <stroke android:dashGap="0dp" android:dashWidth="0dp" android:width="5dp" android:color="@color/light_grey" />

            <size android:height="20dp" android:width="30dp" />
            <corners android:radius="3dp"/>
            <gradient android:type="linear" android:startColor="@color/medium_grey" android:endColor="@color/light_grey"
                android:angle="180"/>
        </shape></item>

</selector>